{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--split-per-abi"
			],
			"options": {
				"cwd": "${workspaceFolder}/re_ucm_app"
			},
			"group": "build",
			"problemMatcher": [],
			"label": "[Build] Split APK",
			"detail": ""
		},
		{
			"label": "[Build Runner] (force-aot)",
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"build",
				"-d",
				"--workspace",
				"--force-aot"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		}
	]
}