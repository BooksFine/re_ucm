{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "flutter",
			"command": "flutter",
			"args": [
				"build",
				"apk",
				"--split-per-abi"
			],
			"options": {
				"cwd": "${workspaceFolder}/re_ucm_app"
			},
			"group": "build",
			"problemMatcher": [],
			"label": "[Build] Split APK",
			"detail": ""
		},
		{
			"label": "[Build Runner]",
			"type": "shell",
			"command": "dart",
			"args": [
				"run",
				"build_runner",
				"build",
				"-d",
				"--workspace",
			],
			"isBackground": false,
			"problemMatcher": "$dart-build_runner",
			"group": "build"
		},
        {
            "label": "build_runner watch",
            "type": "shell",
            "command": "dart",
            "args": [
                "run",
                "build_runner",
                "watch",
                "-d",
				"--workspace",
            ],
            "isBackground": true,
            "problemMatcher": "$dart-build_runner",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            }
        }
	]
}